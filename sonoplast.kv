<VolumeButton@ButtonBehavior+Image>:
    size_hint: None, None
    size: 100, 100

<VolumeSlider@Slider>:
    min: 0
    max: 10
    value: 5
    step: 1
    size_hint: None, None
    size: 600, 10
    canvas.before:
    cursor_size: 0, 0
    disabled: True
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

        Color:
            rgba: 1, 0.5, 1, 1
        Rectangle:
            pos: self.pos
            size: (self.width * (self.value - self.min) / float(self.max - self.min), self.height)


<SonoplastUI>:
    canvas.before:
        Color:
            rgba: 0.15, 0, 0.18, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
    ReverseButton:
        source: "images/rev_dis.png"
        size_hint: None, None
        size: 200, 200
        pos: 240, root.height - 560  # centralizado para 1280x720

    PlayButton:
        source: "images/play.png"
        size_hint: None, None
        size: 200, 200
        pos: 540, root.height - 560  # centralizado para 1280x720

    ForwardButton:
        source: "images/forw_dis.png"
        size_hint: None, None
        size: 200, 200
        pos: 840, root.height - 560  # centralizado para 1280x720

    Label:
        text: "Sono"
        markup: True
        font_size: 100
        font_name: "fonts/RobotoCondensed-Regular.ttf"
        color: 1, 0.5, 1, 1
        size_hint: None, None
        size: self.texture_size
        pos: 430, root.height - 120
    
    Label:
        text: "Blast"
        markup: True
        font_size: 100
        font_name: "fonts/RobotoCondensed-ExtraBold.ttf"
        color: 1, 0.5, 1, 1
        size_hint: None, None
        size: self.texture_size
        pos: 430 + self.texture_size[0], root.height - 120

    Label:
        text: "a sonoloplast player_"
        font_size: 32
        font_name: "fonts/Orbitron-Regular.ttf"
        color: 1,1,1,1
        size_hint: None, None
        size: self.texture_size
        pos: 460, root.height - 135

    VolumeButton:
        id: vol_down
        source: "images/vol_down.png"
        pos: 250 - 50, root.height - 675
        on_release:
            if volume_slider.value > volume_slider.min: volume_slider.value -= 1

    VolumeSlider:
        id: volume_slider
        pos: 330, root.height - 680 + 50
        color: ''

    VolumeButton:
        id: vol_up
        source: "images/vol_up.png"
        pos: 940 + 50, root.height - 675
        on_release:
            if volume_slider.value < volume_slider.max: volume_slider.value += 1


