<SonoplastUI>:
    canvas.before:
        Color:
            rgba: 0.15, 0, 0.18, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
    PlayButton:
        size_hint: None, None
        size: 100, 100
        pos: 580, root.height - 450


    Label:
        text: "Sono"
        markup: True
        font_size: 100
        font_name: "fonts/RobotoCondensed-Regular.ttf"
        color: 1, 0.5, 1, 1
        size_hint: None, None
        size: self.texture_size
        pos: 430, root.height - 120
    
    Label:
        text: "Blast"
        markup: True
        font_size: 100
        font_name: "fonts/RobotoCondensed-ExtraBold.ttf"
        color: 1, 0.5, 1, 1
        size_hint: None, None
        size: self.texture_size
        pos: 430 + self.texture_size[0], root.height - 120

    Label:
        text: "a sonoloplast player_"
        font_size: 32
        font_name: "fonts/Orbitron-Regular.ttf"
        color: 1,1,1,1
        size_hint: None, None
        size: self.texture_size
        pos: 460, root.height - 135

    Slider:
        min: 0
        max: 100
        value: 20
        size_hint: None, None
        size: 400, 30
        pos: 40, root.height - 230

